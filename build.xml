<project name="runner" default="run" basedir=".">
  <property name="libdir" location="lib" />
  <property name="srcdir" location="src" />
  <property name="blddir" location="build" />
  <property name="full-compile" value="true" />
  <path id="lib.path">
    <fileset dir="${libdir}">
      <include name="*.jar" />
    </fileset>
  </path>
  <target name="clean">
    <delete verbose="${full-compile}">
      <fileset dir="${blddir}" includes="**/*.class" />
    </delete>
  </target>
  <target name="compile" depends="clean">
    <javac srcdir="${srcdir}" destdir="${blddir}"
      verbose="${full-compile}">
      <classpath refid="lib.path" />
    </javac>
  </target>
  <target name="run" depends="compile">
    <java classname="RunEdgeConvert" fork="true">
      <classpath refid="lib.path" />
      <classpath location="${blddir}" />
    </java>
  </target>
  <target name="test" depends="compile">
    <java
      classname="MainTester"
      fork="true"
      >
        <classpath refid="classpath.test" />
      </java>
    <junit>
      <classpath refid="classpath.test" />
      <formatter type="brief" usefile="false" />
      <test name="EdgeFieldTest" fork="true" />
    </junit>
  </target>
</project>
